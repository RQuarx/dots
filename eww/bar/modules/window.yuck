(defwidget window[]
    (box
        :space-evenly false

        (box
            :space-evenly false
            :style "
            border-radius: 0px 100px 0px 0px;
            background-color: #283039;
            padding-right: 2em;
            margin-top: 1px;
            "

            (label
                :text "Window"
            )
            (status-label
                ; :text "ÔÑÅ"
                :text ":"
                :style "
                font-weight: bolder;
                margin-right: 1em;
                "
            )
            (label
                ; :text "${active_window == focused_ws ? "null" : active_window}"
                :text "${active_window == "" ? "null" : active_window}"
            )
        )

        (corner :side "r")
    )
)